<div class="section">
    <div class="container">
	    <div class="columns is-centered">
		    <div class="column is-4 translucid">
          <h1>Attendances</h1>
          
          <table>
            <thead>
              <tr>
                <th>User</th>
                <th>Event</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @attendances.each do |attendance| %>
                <tr>
                  <td><%= attendance.user.username %></td>
                  <td><%= attendance.event.name %></td>
                  <td><%= link_to 'Show', attendance %></td>
                  <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
                  <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Attendance', new_attendance_path %>
        </div>
      </div>
    </div>
</div>
